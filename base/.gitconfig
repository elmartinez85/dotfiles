[init]
	defaultBranch = main

[core]
	editor = codium --wait
	autocrlf = input
	excludesfile = ~/.gitignore_global
	pager = delta

[pull]
	rebase = false

[push]
	default = current
	autoSetupRemote = true

[fetch]
	prune = true

[diff]
	colorMoved = zebra

[merge]
	conflictStyle = zdiff3

[alias]
	# Short commands
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD

	# Pretty log
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

	# Show branches sorted by last modified
	recent = branch --sort=-committerdate

	# Undo last commit but keep changes
	undo = reset --soft HEAD^

[color]
	ui = auto

[credential]
	helper = osxkeychain

# Include profile-specific user configuration (name, email, etc.)
[include]
	path = ~/.gitconfig.profile
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
